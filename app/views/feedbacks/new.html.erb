<div class="recipe-validation-modal" id="feedbackModal" style="display: block;">
  <div class="recipe-validation-modal-content">
    <%= image_tag('btn-close-rounded.svg', class: 'modal-close-btn', id: 'closeValidateModal') %>

    <%= simple_form_for(@feedback, url: feedbacks_path(@feedback), method: 'post') do |f| %>
      <%= f.error_notification %>

        <h3>Let's talk!</h3>
        <p>Thank you for using Cuukin. We would love to hear your amazing thoughts and suggestions.</p>

        <%= f.input :email,
          labal: "Contact email",
          input_html: {value: f.object.email || current_user.email} %>

        <%= f.input :description,
          label: "Leave a feedback",
          input_html: { rows: '8' } %>

        <%= f.button :submit, 'Send feedback', class: 'primary-btn' %>

    <% end %>
  </div>
</div>
