<head>
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@800&display=swap" rel="stylesheet">
</head>

<body>
  <div style="background-color: #EDEDED; width: 100%; height: 100%; padding: 50px 0;">
    <div style="padding: 32px 32px; background-color: #FFFFFF; width: 75%; margin: auto;">
      <h1 style="color: #F86464; font-size: 24px; font-weight: 800; margin-bottom: 1em; font-family: 'Nunito', sans-serif; text-align: center;">Your grocery list is here!</h1>
      <p style="font-family: sans-serif; text-align: center; font-size: 16px; color: #000000; margin: 0 0 32px 0;">Hey, <%= @user.first_name %><br>
      This is your shopping list:</p>
      <% @list_items.each do |item| %>
        <p style="font-family: sans-serif; text-align: center; font-size: 16px; color: #000000; margin: 0 0 8px 0;"><%= "#{item['quantity']} #{item['unit']} - #{item['ingredient_name']}" %></p>
      <% end %>
      <p style="font-family: sans-serif; text-align: center; font-size: 16px; color: #000000; margin: 32px 0 0 0">xoxo,<br>
      Kin</p>
    </div>
  </div>
</body>
