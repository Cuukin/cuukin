<div class="container-user-navbar user-navbar-top">
  <div class="nb-user-item" id="nb-level">
    <%= image_tag('nb-level.svg') %>
    <p><%= User.levels[current_user.level] %></p>
  </div>
  <div class="nb-user-item" id="nb-xp">
    <%= image_tag('nb-xp.svg') %>
    <p><%= current_user.xp %></p>
  </div>
  <div class="nb-user-item" id="nb-cuukie">
    <%= image_tag('nb-cuukie.svg') %>
    <p><%= current_user.cuukies %></p>
  </div>
  <div class="nb-user-item" id="nb-dish">
    <%= image_tag('nb-dish.svg') %>
    <p><%= current_user.user_recipes.count %></p>
  </div>
  <%= image_tag('nb-menu.svg', id: 'open-btn') %>
</div>

<div class="container-user-navbar-footer">

  <%= link_to books_path, class: 'user-navbar-footer-item journey-icons' do %>
    <% if params[:controller] == 'books' || params[:controller] == 'lessons' %>
      <%= image_tag('nb-journey-active.svg', id: 'journey-active') %>
      <p class="active">Journey</p>
    <% else %>
      <%= image_tag('nb-journey.svg', id: 'journey') %>
      <p>Journey</p>
    <% end %>
  <% end %>

  <%= link_to user_recipes_path, class: 'user-navbar-footer-item book-icons' do %>
    <% if params[:controller] == 'user_recipes' %>
      <%= image_tag('nb-book-active.svg', id: 'book-active') %>
      <p class="active">CuukBook</p>
    <% else %>
      <%= image_tag('nb-book.svg', id: 'book') %>
      <p>CuukBook</p>
    <% end %>
  <% end %>

  <%= link_to users_path, class: 'user-navbar-footer-item community-icons' do %>
    <% if current_page?(controller: 'users', action: 'index') %>
      <%= image_tag('nb-community-active.svg', id: 'community-active') %>
      <p class="active">Leaderboard</p>
    <% else %>
      <%= image_tag('nb-community.svg', id: 'community') %>
      <p>Leaderboard</p>
    <% end %>
  <% end %>

  <%= link_to user_path(current_user), class: 'user-navbar-footer-item profile-icons' do %>
    <% if current_page?(controller: 'users', action: 'show', id: current_user.id) || params[:controller] == 'devise/registrations' %>
      <%= image_tag('nb-profile-active.svg', id: 'profile-active') %>
      <p class="active">Profile</p>
    <% else %>
      <%= image_tag('nb-profile.svg', id: 'profile') %>
      <p>Profile</p>
    <% end %>
  <% end %>

</div>

<div class="expanded-navbar">
  <div class="container-user-navbar">
    <div class="expanded-nb-div"></div>
    <div class="expanded-nb-div"></div>
    <div class="expanded-nb-div"></div>
    <div class="expanded-nb-div"></div>
    <%= image_tag('btn-close.svg', id: 'close-btn') %>
  </div>
  <div class="expanded-menu">
    <ul>
      <li><%=link_to 'About Cuukin', 'https://www.cuukin.app/', target: '_blank' %></li>
      <li><%=link_to 'Sharing is Caring', 'https://www.patreon.com/Cuukin', target: '_blank' %></li>
      <li><%= link_to 'Credits', credits_path %></li>
      <li><%=link_to 'Log Out', destroy_user_session_path, method: :delete %></li>
    </ul>
  </div>
</div>
