<div class="body-white-bg">
  <div class="form-devise">

    <div class="wrapper-registration">
      <div class="devise-header">
        <h2 class="mb-3">Reset password</h2>
        <%= image_tag('devise-password-email.svg', class:'devise-img') %>
        <p class="text-center mt-4">Please insert your email and check your inbox with the link to reset your password.</p>
      </div>

      <div class="wrapper-form">
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

          <div class="form-inputs">
            <%= f.input :email,
                        required: true,
                        label: false,
                        placeholder: 'Email',
                        input_html: { autocomplete: "email" } %>
          </div>

          <div class="form-actions mt-3">
            <%= f.button :submit, "Send me password instructions", class: "primary-btn" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
