<div class="body-white-bg">
  <div class="form-devise register-devise">

    <div class="devise-header mb-3">
      <h2>Let's get you Cuukin!</h2>
      <%= image_tag('devise-signup.svg', class:'devise-img') %>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="form-inputs">
          <%= f.input :first_name,
                      required: true,
                      label: false,
                      placeholder: 'First Name',
                      input_html: { autocomplete: "first_name", class: "mb-3" }%>
          <%= f.input :last_name,
                      label: false,
                      placeholder: 'Last Name (optional)',
                      input_html: { autocomplete: "last_name", class: "mb-3" }%>

        <%= f.input :email,
                    required: true,
                    label: false,
                    placeholder: 'Email',
                    input_html: { autocomplete: "email" }%>

        <i class="far fa-eye-slash toggle-password"></i>
        <%= f.input :password,
                    required: true,
                    label: false,
                    placeholder: 'Password',
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", class: "my-password" } %>

        <div class="terms-of-service mt-3">
          <i class="fas fa-check-square"></i>
          <p>I agree to the <span id="termsOfService">Terms & Conditions</span></p>
        </div>
      </div>

      <div class="form-actions mt-3">
        <%= f.button :submit, "Sign Up", class: 'primary-btn mr-1' %>
      </div>
    <% end %>

    <div class="devise-extra-links">
      <%= link_to "Already have an account? Log In", new_user_session_path, class: 'devise-p mt-4' %>
    </div>
  </div>
</div>
