<div class="form-devise-modal">
  <div class="form-devise-modal-content">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs edit-user-main-container">

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :username,
                    required: true,
                    input_html: { autocomplete: "username" } %>
        <%= f.input :first_name,
                    input_html: { autocomplete: "first_name" },
                    label: 'First Name' %>
        <%= f.input :last_name,
                    input_html: { autocomplete: "last_name" },
                    label: 'Last Name' %>
        <%= f.input :bio,
                    input_html: { rows: '2'},
                    label: 'Say something about yourself' %>

        <p class="mb-4" id="edit-commitment-btn">Edit weekly commitment</p>

        <%= f.input :email_check, label: 'I want to receive nudges on my e-mail', input_html: { class: "toggle" } %>

        <div class="form-actions mt-3 double-btn edit-user-btns">
          <%= link_to "Cancel", user_path(current_user), class: 'secondary-btn mr-1' %>
          <%= f.button :submit, "Update", class: "primary-btn" %>
        </div>
      </div>

      <div class="form-inputs edit-commitment-container" style="display: none;">

        <%= f.input :weekly_commitment, collection: [1, 2, 3, 4, "5 or more"], as: :radio_buttons %>

        <div class="form-actions mt-3 double-btn edit-user-btns">
          <%= link_to "Cancel", user_path(current_user), class: 'secondary-btn mr-1' %>
          <%= f.button :submit, "Update", class: "primary-btn" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
