<div class="form-devise-modal">
  <div class="form-devise-modal-content">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :username,
                    input_html: { autocomplete: "username" } %>
        <%= f.input :first_name,
                    input_html: { autocomplete: "first_name" },
                    label: 'First Name' %>
        <%= f.input :last_name,
                    input_html: { autocomplete: "last_name" },
                    label: 'Last Name' %>

        <%= f.input :email, required: true, label: 'Email', placeholder: 'Email' %>

      </div>

      <div class="form-actions mt-3 double-btn">
        <%= link_to "Cancel", user_path(current_user), class: 'secondary-btn mr-1' %>
        <%= f.button :submit, "Update", class: "primary-btn" %>
      </div>
    <% end %>

    <p class="mt-3 mb-0 text-center devise-p"><%= link_to "Reset password", new_user_password_path %></p>
    <p class="mt-1 mb-0 text-center devise-p">Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
  </div>
</div>
