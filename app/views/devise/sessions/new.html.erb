<div class="form-devise">

  <div class="devise-header mb-3">
    <h2>Welcome back!</h2>
    <%= image_tag('login-00.png', class: 'devise-img') %>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  label: false,
                  placeholder: 'Email',
                  input_html: { autocomplete: "email" } %>
      <i class="far fa-eye-slash toggle-password"></i>
      <%= f.input :password,
                  required: false,
                  label: false,
                  placeholder: 'Password',
                  input_html: { autocomplete: "current-password", class: "my-password mb-2" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions double-btn mt-3">
      <%= f.button :submit, "Log In", class: 'primary-btn mr-1' %>
      <%= link_to "or Sign Up", new_user_registration_path, class: 'secondary-btn ml-1' %>
    </div>
  <% end %>

  <div class="devise-extra-links">
    <%= link_to "Forgot password?", new_user_password_path, class: 'devise-p mt-3'  %>
  </div>
</div>
