<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-lg-6">

      <div class="form-devise">
        <h2>Log in</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <i class="far fa-eye-slash toggle-password"></i>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password", class: "my-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions mb-3">
            <%= f.button :submit, "Log in", class: "primary-btn" %>
          </div>
        <% end %>

      <form method='post' action='/users/auth/facebook'>
        <button type='submit'>Login with FB</button>
      </form>

      <%= form_tag('/users/auth/facebook', method: 'post') do %>
        <button type='submit'>Login with FB</button>
      <% end %>

      <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, method: :post %>
      </div>
    </div>
  </div>
</div>
