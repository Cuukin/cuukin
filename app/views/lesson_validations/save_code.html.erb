<div class="recipe-validation-modal" id="validateLessonModal">
  <div class="recipe-validation-modal-content">
    <%= image_tag('btn-close-rounded.svg', class: 'modal-close-btn', id: 'closeValidateModal') %>

    <div class="recipe-validation-container">
      <div class="recipe-validation-slide">

        <div class="recipe-validation-item">
          <%= simple_form_for(@lesson_validation, url: lesson_lesson_validations_path(@lesson), method: 'post') do |f| %>
          <%= f.error_notification %>
          <h3>Take a photo of your dish</h3>
          <p>Your photo will verify lesson completition</p>
          <%= f.input :photo, input_html: { class: 'd-none', id: 'photo-input' }, label_html: { class: 'upload-photo' }, label: 'ðŸ“· Upload a photo' %>
          <p class="primary-btn" id="validateLessonNext">Next</p>
        </div>

        <div class="recipe-validation-item">
          <h3>Tell us about your lesson</h3>
          <p>How easy did you find it?</p>

          <%= f.input :difficulcy, collection: LessonValidation.difficulcies.keys, label: false, input_html: { class: 'd-none', id: 'difficulcy-input' }, label_html: { class: 'lesson-validation-options' } %>

          <fieldset class="form-group radio_buttons optional">
            <!-- <legend class="col-form-label pt-0">Rating</legend> -->
            <input type="hidden" name="lesson_validation[difficulcy]" value="">

            <div class="lesson-validation-options-container">
              <div class="form-check lesson-validation-options">
                <input class="form-check-input radio_buttons" type="radio" value="easy" name="lesson_validation[difficulcy]" id="lesson_validation_difficulcy_1">
                <label class="form-check-label collection_radio_buttons" for="lesson_validation_difficulcy_1">
                  <%= image_tag('lesson-validation-icon-1.svg') %>
                  <p>Piece of cake</p>
                </label>
              </div>

              <div class="form-check lesson-validation-options">
                <input class="form-check-input radio_buttons" type="radio" value="medium" name="lesson_validation[difficulcy]" id="lesson_validation_difficulcy_2">
                <label class="form-check-label collection_radio_buttons" for="lesson_validation_difficulcy_2">
                  <%= image_tag('lesson-validation-icon-2.svg') %>
                  <p>Just right</p>
                </label>
              </div>

              <div class="form-check lesson-validation-options">
                <input class="form-check-input radio_buttons" type="radio" value="hard" name="lesson_validation[difficulcy]" id="lesson_validation_difficulcy_3">
                <label class="form-check-label collection_radio_buttons" for="lesson_validation_difficulcy_3">
                  <%= image_tag('lesson-validation-icon-3.svg') %>
                  <p>Burnt it all</p>
                </label>
              </div>
            </div>

          </fieldset>

          <p>Do you want to leave any notes or comments about this lesson?</p>
          <%= f.input :notes, label: false, input_html: { rows: '5'} %>

          <%= f.button :submit, 'Complete Lesson', class: 'primary-btn' %>
        </div>

          <% end %>
      </div>
    </div>

  </div>
</div>


.recipe-validation-modal {
  display: none;
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  overflow: auto;
  background-color: rgb(0,0,0);
  background-color: rgba(0,0,0,0.4);
  padding: 80px 0;
  z-index: 1000;
}

.recipe-validation-modal-content {
  position: absolute;
  right: 50%;
  bottom: 50%;
  transform: translate(50%,50%);
  padding: 16px;

  width: 330px;

  background-color: $white;
  border-radius: 16px;
  box-shadow: 5px 5px 6px rgba(0, 0, 0, .16);

  display: flex;
  flex-direction: column;
  justify-content: center;
}

.modal-close-btn {
  height: 42px;
  width: 42px;
  align-self: flex-end;
  cursor: pointer;
}

.lesson-validation-options {
  display: flex;
  justify-content: space-evenly;

  img {
    height: 50px;
  }

  p {
    font-size: 14px;

  }

  .lv-option {
    text-align: center;
  }
}

.lesson-validation-options-container {
  display: flex;
  margin-bottom: 16px;

  .form-check-label {
    text-align: center;
  }

  .form-check-input {
    position: absolute;
    top: 80px;
    margin: 0;
  }
}

.recipe-validation-container {
  overflow: hidden;
}

.recipe-validation-slide {
  width: 100%;
  display: flex;
}

@media (max-width: 360px) {
  .recipe-validation-modal-content {
    width: 88%;
  }
}
