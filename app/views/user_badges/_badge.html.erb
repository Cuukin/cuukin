<div class="currency-modal" id="<%= badge.id %>" style="display: none;">
  <div class="currency-modal-content">
    <%= image_tag('btn-close-rounded.svg', class: 'currency-modal-close-btn') %>

    <div class="user-badge-container badge-popup">
      <%= image_tag("#{badge.white}", class: 'badge1 badge-icon') %>
      <%= image_tag("#{badge.icon}", class: 'badge2 badge-icon') %>
    </div>

    <h1 class="badge-name"><%= badge.name %></h1>

    <div class="currency-text-content">
      <p><%= badge.description %></p>
    </div>
  </div>
</div>
