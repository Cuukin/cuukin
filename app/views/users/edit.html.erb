<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-lg-6">

      <div class="form-devise">
        <h2>Edit Profile</h2>

        <%= simple_form_for(current_user, url: user_path(current_user), method: 'patch') do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :photo, input_html: { class: 'd-none', id: 'photo-input' }, label_html: { class: 'upload-photo' }, label: 'ðŸ“· Upload a photo' %>
            <%= image_tag "", width: 300, class: "hidden", id: "photo-preview" %>
            <%= f.input :first_name,
                        autofocus: true,
                        input_html: { autocomplete: "first_name" }%>
            <%= f.input :last_name,
                        autofocus: true,
                        input_html: { autocomplete: "last_name" }%>
            <%= f.input :username,
                        autofocus: true,
                        input_html: { autocomplete: "username" }%>
            <%= f.input :bio,
                        autofocus: true,
                        input_html: { autocomplete: "bio" }%>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Update", class: "btn-devise" %>
          </div>
        <% end %>

        <%= link_to "Back", :back, class: "btn-back" %>
      </div>
    </div>
  </div>
</div>
