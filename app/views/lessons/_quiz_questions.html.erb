<% skill_chapter.quiz_questions.each_with_index do |quiz_question, index| %>
  <div class="quiz-container">
    <div class="quiz-card">

      <div class="quiz-card-header">
        <h3>Quiz - <%= skill_chapter.title %></h3>
        <h4><span class="current"><%= index + 1 %></span> / <%= skill_chapter.quiz_questions.count %></h4>
      </div>

      <h1 class="quiz-question"><%= quiz_question.question %></h1>

      <div class="quiz-answer-container">
        <% quiz_question.quiz_question_options.each do |option| %>

          <%= link_to quiz_results_path(quiz_result: { quiz_question_option_id: option.id, quiz_question_id: quiz_question.id }), method: :post, remote: true do %>
            <div class="quiz-answer">
             <p><%= option.option %></p>
            </div>
          <% end %>

        <% end %>
      </div>

      <p class="skip-quiz">Skip</p>
      <p class="next-question primary-btn d-none">Next</p>

      <p class="quiz-answer-content d-none">
        <span>Answer:</span> Trust your paladar and add little salt as you cook.
      </p>

    </div>
  </div>
<% end %>
