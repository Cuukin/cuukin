<div class="feed-container">
  <div class="feed-header">
    <h1>Feeding the feed</h1>
    <div class="friends-toggle">
      <span class="feed feedSelected"><p>All</p></span>
      <span class="feed"><p>Friends</p></span>
    </div>
  </div>

  <div class="public-feed-container">
    <% @posts.each do |post| %>
      <%= link_to user_path(post.user) do %>
        <div class="feed-card">
          <div class="feed-card-header">
            <% if post.user.photo.attached? %>
              <%= cl_image_tag post.user.photo.key, crop: :fill, class: 'user-img' %>
            <% else %>
              <%= image_tag "https://res.cloudinary.com/cuukin/image/upload/v1610757107/Cuukin%20-%20Avatar/ck_av_7_dkpysc.png", class: 'user-img' %>
            <% end %>
            <div class="card-header-text-info">
              <h5>@<%= post.user.username %></h5>
              <p><%= "Lesson #{post.recipe.lessons.first.book.id}.#{post.recipe.lessons.first.order_in_book} | #{post.recipe.title}" %></p>
            </div>
          </div>
          <div class="feed-image" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0)), url('<%= post.photo.service_url %>')"></div>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="friends-feed-container"></div>
</div>
